<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cz.bbmri.entity.StorageMethodology" table="storage_methodology" lazy="true">
		<id name="sampleId" column="sample_id" type="long">
			<generator class="foreign">
				<param name="property">sample</param>
			</generator>
		</id>
		<one-to-one name="sample" class="cz.bbmri.entity.Sample" cascade="all" constrained="true"/>
		<property name="methology" column="methology" type="text" not-null="false" lazy="false"/>
		<property name="temperatureCelsius" column="temperature_celsius" type="float" not-null="false" lazy="false"/>
		<property name="sts" column="sts" type="boolean" not-null="false" lazy="false"/>
		<property name="expiration" column="expiration" type="timestamp" not-null="false" lazy="false"/>
		<set name="conservationMethod" table="storage_methodology_conservation_method" lazy="extra" cascade="save-update,lock">
			<key column="storage_methodology_id" not-null="true"/>
			<many-to-many column="conservation_method_id" class="cz.bbmri.entity.ConservationMethod">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
