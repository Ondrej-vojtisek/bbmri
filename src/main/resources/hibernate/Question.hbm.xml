<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cz.bbmri.entity.Question" table="question" lazy="true">
		<id name="id" column="id" type="long" unsaved-value="0">
			<generator class="sequence">
				<param name="sequence">question_seq</param>
			</generator>
		</id>
		<property name="created" column="created" type="date" not-null="false" lazy="false"/>
		<property name="lastModification" column="last_modification" type="date" not-null="false" lazy="false"/>
		<property name="specification" column="specification" type="text" not-null="false" lazy="false"/>
		<many-to-one name="project" cascade="lock" column="project_id" class="cz.bbmri.entity.Project" not-null="true" lazy="proxy">
		</many-to-one>
		<many-to-one name="questionState" cascade="lock" column="questionState_id" class="cz.bbmri.entity.QuestionState" not-null="true" lazy="proxy">
		</many-to-one>
		<set name="request" lazy="extra" cascade="save-update,lock" inverse="true">
			<key column="question_id" not-null="true"/>
			<one-to-many class="cz.bbmri.entity.Request"/>
		</set>
	</class>
</hibernate-mapping>
