<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cz.bbmri.entity.Settings" table="settings" lazy="true">
		<id name="userId" column="user_id" type="long">
			<generator class="foreign">
				<param name="property">user</param>
			</generator>
		</id>
		<one-to-one name="user" class="cz.bbmri.entity.User" cascade="all" constrained="true"/>
		<property name="locale" column="locale" type="text" not-null="false" lazy="false"/>
	</class>
</hibernate-mapping>
