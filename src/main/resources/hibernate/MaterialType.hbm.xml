<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cz.bbmri.entity.MaterialType" table="material_type" lazy="true">
		<id name="id" column="id" type="integer" unsaved-value="0">
			<generator class="sequence">
				<param name="sequence">material_type_seq</param>
			</generator>
		</id>
		<property name="key" column="`key`" type="text" not-null="true" lazy="false"/>
		<property name="name" column="name" type="text" not-null="true" lazy="false"/>
		<property name="description" column="description" type="text" not-null="false" lazy="false"/>
		<set name="sample" lazy="extra" cascade="save-update,lock" inverse="true">
			<key column="material_type_id" not-null="false"/>
			<one-to-many class="cz.bbmri.entity.Sample"/>
		</set>
	</class>
</hibernate-mapping>
