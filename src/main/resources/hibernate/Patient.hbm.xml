<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cz.bbmri.entity.Patient" table="patient" lazy="true">
		<id name="id" column="id" type="long" unsaved-value="0">
			<generator class="sequence">
				<param name="sequence">patient_seq</param>
			</generator>
		</id>
		<property name="institutionalId" column="institutional_id" unique="true" type="text" not-null="true" lazy="false"/>
		<property name="birthYear" column="birth_year" type="short" not-null="true" lazy="false"/>
		<property name="birthMonth" column="birth_month" type="short" not-null="false" lazy="false"/>
		<property name="consent" column="consent" type="boolean" not-null="true" lazy="false"/>
		<many-to-one name="biobank" cascade="lock" column="biobank_id" class="cz.bbmri.entity.Biobank" not-null="true" lazy="proxy">
		</many-to-one>
		<many-to-one name="sex" cascade="lock" column="sex_id" class="cz.bbmri.entity.Sex" not-null="true" lazy="proxy">
		</many-to-one>
		<set name="sample" lazy="extra" cascade="save-update,lock" inverse="true">
			<key column="patient_id" not-null="false"/>
			<one-to-many class="cz.bbmri.entity.Sample"/>
		</set>
	</class>
</hibernate-mapping>
